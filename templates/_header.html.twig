<header class="container">
    <nav class="navbar navbar-expand-lg bg-purple navbar-dark justify-content-between mx--30">
        <a class="navbar-brand" href="{{ path('conferences_list') }}">
            <img src="{{ asset('build/images/logo.svg') }}"
                 width="100"
                 height="100"
                 class="d-inline-block"
                 alt="Logo Starfleet">
            <h2 class="d-inline-block ml-3">Starfleet</h2>
            <sup class="badge badge-light ml-3">beta</sup>
        </a>
        <div>
            <button class="navbar-toggler"
                    type="button"
                    data-toggle="collapse"
                    data-target="#navbar"
                    aria-controls="navbar"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbar">
                <ul class="navbar-nav mr-auto position-relative">
                    <li class="nav-item mr-2">
                        <a class="nav-link btn btn-outline-secondary btn-sm text-light fsize-medium"
                           href="{{ app.user ? path('user_account') : path('login') }}">
                            {{ app.user ? 'ðŸ‘¤ Account' : 'ðŸ”’ Login' }}
                        </a>
                    </li>
                    {% if app.user %}
                        {% set unreadNotifications = getUnreadNotifications(app.user.notifications) %}
                        <li class="notification-dropdown nav-item {{ unreadNotifications|length ? 'activated' : '' }}">
                            <a class="notification-button nav-link btn btn-outline-secondary btn-sm text-light fsize-medium mr-2">
                                {% if unreadNotifications|length %}
                                    <i class="fas fa-exclamation-circle text-danger mr-1 fsize-medium"></i> {{ unreadNotifications|length }} Notifications <i class="fas fa-chevron-right ml-1 text-danger"></i>
                                {% else %}
                                    No Notifications
                                {% endif %}
                            </a>

                            <div class="notification-list">
                                <form action="{{ path('read_all_notification', { route_name: app.request.get('_route') }) }}" method="POST" class="notification-read-all">
                                    <button type="submit" class="btn"><i class="fas fa-times-circle"></i> Mark all as read</button>
                                    <input type="hidden" name="token" value="{{ csrf_token('') }}">
                                </form>
                                {% for index, notification in unreadNotifications|slice(0, 5) %}
                                    <div class="notification notification-{{ index }} fsize-medium">
                                        {{ include('user/notifications/' ~ notification.trigger ~ '.html.twig', { notification: notification }) }}
                                        <form class="notification-read" action="{{ path('read_notification', { id: notification.id, route_name: app.request.get('_route') }) }}" method="POST">
                                            <button type="submit" class="btn"><i class="fas fa-times"></i> Mark as read</button>
                                            <input type="hidden" name="token" value="{{ csrf_token('') }}">
                                        </form>
                                    </div>
                                {% endfor %}
                                {% if unreadNotifications|length > 5 %}
                                    <div class="notification-more text-center mb-2">And {{ unreadNotifications|length - 5 }} more</div>
                                {% endif %}
                            </div>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
</header>
