{% extends "user/user_layout.html.twig" %}

{% block nav %}
    {% set section = 'participations' %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="mb-5 w-100">
        <h2 class="ml-5 mb-5">Conferences you went to</h2>
        {% for participation in participations %}
            <div class="card w-75 mx-auto my-2">
                <div class="card-body d-flex justify-content-between">
                    <a href="{{ path('conferences_show', { slug: participation.conference.slug }) }}">
                        <h5 class="card-title text-primary my-0">{{ participation.conference.name }}</h5>
                    </a>
                    <div>ended on {{ participation.conference.endAt|date('m/d/Y') }}</div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('js/highlightScroll') }}
{% endblock %}
