{% extends "user/user_layout.html.twig" %}

{% block nav %}
    {{ parent() }}
    <a href="{{ path('user_participations') }}" class="ml-auto">
        <div class="btn btn-primary">Back to participations</div>
    </a>
{% endblock %}

{% block content %}
    <div class="mb-5 w-100">
        <h2 class="ml-5 mb-5">Rejected Participations</h2>
        {% for participation in participations %}
            <div class="card w-75 mx-auto my-2">
                <div class="card-body d-flex justify-content-between">
                    <a href="{{ path('conferences_show', { slug: participation.conference.slug }) }}">
                        <h5 class="card-title text-primary my-0">{{ participation.conference.name }}</h5>
                    </a>
                    <div>starts on {{ participation.conference.startAt|date('m/d/Y') }}</div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
