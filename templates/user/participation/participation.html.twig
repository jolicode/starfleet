{% extends "user/user_layout.html.twig" %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% form_theme form.conference _self %}

{% block _participation_conference_widget %}
    <input list="{{ id }}" class="form-control" name="{{ full_name }}" required autocomplete="off">
    <datalist id="{{ id }}">
        {% for choice in choices %}
            <option value="{{ choice.name }}"></option>
        {% endfor %}
    </datalist>
{% endblock %}

{% block content %}
    <aside class="col-6">
        {% if futureParticipations|length %}
            <div class="row mb-5" id="future-participations-block">
                <h2 class="mx-0 mb-5">Conferences you will attend soon</h2>
                {% for participation in futureParticipations|slice(0, 3) %}
                    <div class="user-items-list">
                        <div class="row">
                            <a href="{{ path('conferences_show', { slug: participation.conference.slug }) }}">
                                {{ participation.conference.name }}
                            </a>, starts on {{ participation.conference.startAt|date('m/d/Y') }}
                        </div>

                        <div class="row w-100 mt-2">
                            <a href="{{ path('edit_participation', { id: participation.id }) }}" class="pr-5 action-edit">
                                <div class="btn color-edit p-0"><i class="fa fa-edit"></i> Edit Participation</div>
                            </a>
                            <a href="{{ path('user_participations_cancel', { id: participation.id }) }}" class="action-cancel">
                                <div class="btn color-cancel p-0"><i class="fa fa-times-circle"></i> Cancel Participation</div>
                            </a>
                        </div>
                    </div>
                    {% if loop.last and futureParticipations|length > 3 %}
                        <a href="{{ path('future_participations') }}">...Show more</a>
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}

        {% if pendingParticipations|length %}
            <div class="row mb-5" id="pending-participations-block">
                <h2 class="mx-0 mb-5">Pending participations</h2>
                {% for participation in pendingParticipations|slice(0, 3) %}
                    <div class="user-items-list">
                        <div class="row w-100">
                            <a href="{{ path('conferences_show', { slug: participation.conference.slug }) }}">
                                {{ participation.conference.name }}
                            </a>, starts on {{ participation.conference.startAt|date('m/d/Y') }}
                        </div>

                        <div class="row w-100 mt-2">
                            <a href="{{ path('edit_participation', { id: participation.id }) }}" class="pr-5 action-edit">
                                <div class="btn color-edit p-0"><i class="fa fa-edit"></i> Edit Participation</div>
                            </a>
                            <a href="{{ path('user_participations_cancel', { id: participation.id }) }}" class="action-cancel">
                                <div class="btn color-cancel p-0"><i class="fa fa-times-circle"></i> Cancel Participation</div>
                            </a>
                        </div>
                    </div>
                    {% if loop.last and pendingParticipations|length > 3 %}
                        <a href="{{ path('pending_participations') }}">...Show more</a>
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}

        {% if rejectedParticipations|length %}
            <div class="row mb-5" id="rejected-participations-block">
                <h2 class="mx-0 mb-5">Rejected participations</h2>
                {% for participation in rejectedParticipations|slice(0, 3) %}
                    <div class="user-items-list">
                        <div class="row w-100">
                            <a href="{{ path('conferences_show', { slug: participation.conference.slug }) }}">
                                {{ participation.conference.name }}
                            </a>, starts on {{ participation.conference.startAt|date('m/d/Y') }}
                        </div>
                    </div>
                    {% if loop.last and rejectedParticipations|length > 3 %}
                        <a href="{{ path('rejected_participations') }}">...Show more</a>
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}

        {% if pastParticipations|length %}
            <div class="row mb-5" id="past-participations-block">
                <h2 class="mx-0 mb-5">Conferences you went to</h2>
                {% for participation in pastParticipations|slice(0, 3) %}
                    <div class="user-items-list">
                        <div class="row w-100">
                            <a href="{{ path('conferences_show', { slug: participation.conference.slug }) }}">
                                {{ participation.conference.name }}
                            </a>, starts on {{ participation.conference.startAt|date('m/d/Y') }}
                        </div>
                    </div>
                    {% if loop.last and pastParticipations|length > 3 %}
                        <a href="{{ path('past_participations') }}">...Show more</a>
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}
    </aside>

    <section class="col-6 pl-5">
        <div class="mb-5">
            {% if chart %}
                {{ render_chart(chart) }}
            {% endif %}
        </div>

        <div class="pt-5">
            <h2>Ask for participation</h2>
            {{ form_start(form, {
                attr: {
                    class: 'row flex-column',
                    id: form.vars.id
                }
            }) }}
                {{ form_row(form.conference) }}
                {{ form_row(form.transportStatus) }}
                {{ form_row(form.hotelStatus) }}
                {{ form_row(form.conferenceTicketStatus) }}
                {{ form_row(form.asSpeaker, {
                    row_attr: {class: 'align-self-center'}
                }) }}

                <button type="submit" class="btn btn-primary align-self-center" id="submit_participation">Submit</button>

            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
